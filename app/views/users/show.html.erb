<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info entry_form">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name.upcase %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
  <div class="col-md-6">
    <%= render "lesson_solved" if current_user? @user %>
  </div>
</div>
