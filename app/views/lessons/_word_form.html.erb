<div class="fields">
  <li>
    <%= f.object.word.content %>
  </li>
  <br>
  <ol type="a">
    <% f.object.word.answers.each do |answer| %>
      <li>
        <label class="radio radio-answer">
          <%= f.radio_button :answer_id, answer.id, class: "radio_word" %>
          <%= answer.content %>
        </label>
      </li>
    <% end %>
  </ol>
</div>
