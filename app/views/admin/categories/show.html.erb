<div class="row">
  <%= render "layouts/sidebar" %>
  <div class="col-md-offset-3 col-md-7">
    <div class="page-header">
      <h1>
        <%= @category.name %>
      </h1>
      <h3>
        <%= t "category.show.words" %>
        <%= link_to t("admin.category.add_word.btn"),
          new_admin_word_path(category_id: @category.id), class: "btn btn-primary" %>
      </h3>
    </div>
    <div class="row">
      <%= render @category.words %>
    </div>
  </div>
</div>
